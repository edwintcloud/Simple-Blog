{% extends "index.njk" %}

{% block body %}
{% if session.userId %}
<nav class="panel" id="edit-post-panel">
    <p class="panel-heading">
        Edit Post
    </p>
    <div class="panel-block" style="height:450px;">
        <input type="hidden" name="author" value="{{ session.screenName }}">
        <input type="hidden" name="id" value="{{ post._id }}">
        <div style="width: 90%;margin-left: auto;margin-right: auto;">
            <div class="field">
                <label class="label">Title</label>
                <div class="control">
                    <input class="input" type="text" name="title" value="{{ post.title }}">
                </div>
            </div>
            <div class="field">
                <label class="label">Content</label>
                <div class="control">
                    <textarea class="textarea" name="content" style="height: 250px;">{{ post.content }}</textarea>
                </div>
            </div>
            <div class="field is-grouped is-pulled-right">
                <div class="control">
                    <button class="button is-text" onclick="window.history.back()">Cancel</button>
                </div>
                <div class="control">
                    <button class="button is-link" onclick="editPost()">Save</button>
                </div>
            </div>
        </div>
    </div>

</nav>
{% else %}
<nav class="panel" id="new-post-panel">
    <p class="panel-heading">
    Edit Post
    </p>
    <div class="panel-block" style="height:300px;">
        <input type="hidden" name="author" value="{{ session.screenName }}">
        <div class="container has-text-centered is-size-3">
            Your session has expired. Please <a onclick="showModal('login-modal')">login</a>!
        </div>
    </div>

    </nav>
{% endif %}

{% endblock %}
