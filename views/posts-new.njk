{% extends "index.njk" %}

{% block body %}
<nav class="panel" id="new-post-panel">
<p class="panel-heading">
Create a Post
</p>
<div class="panel-block" style="height:600px;">
    <div class="container">
        <div class="field">
  <label class="label">Title</label>
  <div class="control">
    <input class="input" type="text" name="title">
  </div>
</div>
<div class="field">
  <label class="label">Content</label>
  <div class="control">
    <textarea class="textarea" name="content" style="height: 300px;"></textarea>
  </div>
</div>
<div class="field is-grouped is-pulled-right">
    <div class="control">
      <button class="button is-text">Cancel</button>
    </div>
  <div class="control">
    <button class="button is-link" onclick="newPost()">Create</button>
  </div>
</div>
    </div>
</div>

</nav>
{% endblock %}
