{% extends "index.njk" %}

{% block body %}
{% if session.userId %}
<nav class="panel" id="new-post-panel">
<p class="panel-heading">
Create a Post
</p>
<div class="panel-block" style="padding-top:20px;padding-bottom:20px;">
    <input type="hidden" name="author" value="{{ session.screenName }}">
    <div style="width: 90%;margin-left: auto;margin-right: auto;">
        <div class="field">
  <label class="label">Title</label>
  <div class="control">
    <input class="input" type="text" name="title">
  </div>
</div>
<div class="field">
  <label class="label">Content</label>
  <div class="control">
    <textarea class="textarea" name="content" style="height: 250px;"></textarea>
  </div>
</div>
<div class="field is-grouped is-pulled-right">
    <div class="control">
      <button class="button is-text" onclick="window.history.back()">Cancel</button>
    </div>
  <div class="control">
    <button class="button is-link" onclick="newPost()">Create</button>
  </div>
</div>
    </div>
</div>

</nav>
{% else %}
<nav class="panel" id="new-post-panel">
<p class="panel-heading">
Create a Post
</p>
<div class="panel-block" style="height:300px;">
    <input type="hidden" name="author" value="{{ session.screenName }}">
    <div class="container has-text-centered is-size-3">
        Your session has expired. Please <a onclick="showModal('login-modal')">login</a>!
    </div>
</div>

</nav>
{% endif %}
{% endblock %}
